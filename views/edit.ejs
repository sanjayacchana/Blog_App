<%- include ("partials/header") %>
<div class="ui main text container segment">
	<div class="ui huge header">Edit <%=foundedBlog.title%> </div>

	<form class="ui form" action="/blogs/<%= foundedBlog._id%>?_method=PUT" method="POST">
		  <div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]"  value="<%=foundedBlog.title%>" required>
		  </div>
		  <div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]"  value="<%=foundedBlog.image%>" required>
		  </div>
			<div class="field">
			<label>Body Content</label>
				<textarea name="blog[body]" required> <%- foundedBlog.body %> </textarea>
		  </div>
	  	<button class="ui violet basic button" type="submit">Submit</button>
	</form>
</div>
<%- include ("partials/footer") %>

<%- include ("partials/header") %>
<div class="ui main text container segment">
	<div class="ui huge header">New Post</div>

	<form class="ui form" action="/blogs" method="POST">
		  <div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" placeholder="title" required>
		  </div>
		  <div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" placeholder="image url" required>
		  </div>
			<div class="field">
			<label>Body Content</label>
				<textarea name="blog[body]" placeholder="blog text goes here" required></textarea>
		  </div>
	  	<button class="ui violet basic button" type="submit">Submit</button>
	</form>
</div>
<%- include ("partials/footer") %>
